#!/usr/bin/env bash
# Measure total description chars in a directory
# Usage: description/count-total-chars <path>
#
# Searches for "description:" in frontmatter and counts total chars.

path="${1:?Usage: description/count-total-chars <path>}"

if [ ! -d "$path" ]; then
  echo "0"
  exit 0
fi

grep -rh "^description:" "$path/" 2>/dev/null | wc -c | tr -d ' '
